# Description:
#   Kingdon's callbacks
#
# Dependencies:
#   None
#
# Configuration:
#   None
#
# Commands:
#   tebot list users - Show un-teamed users listed by language
#   tebot list ideas - Show the list of ideas from un-teamed users
#   tebot idea #n - Ask whose idea is idea #n

module.exports = (robot) ->

  robot.respond /list users/i, (msg) ->
    users = robot.brain.get "users"
    users = {} if users == null
    t = ""
    c = 0
    unless Object.keys(users).length == 0
      for username, fields of users
        l = robot.brain.get "listed:#{username}"
        t = t + "@#{username}: #{fields.language}\n" if l
        c = c + 1 if l
      t = t + "To remove yourself from this list, try '#{robot.name} unlist me" if robot.brain.get "listed:#{msg.envelope.user.name}"
    else
      msg.send "No users so far!  Try '#{robot.name} find me a team'"
      return false
    if c > 0
      msg.send "These hackathon participants are listed by their chosen language:"
      msg.send t
    else
      msg.send "Nobody is listed as unteamed.  Try '#{robot.name} find me a team'"

  robot.respond /list( project)? ideas/i, (msg) ->
    ideas = robot.brain.get "ideas"
    ideas = [] if ideas == null
    t = ""
    c = 0
    unless ideas.length == 0
      for obj, i in ideas
        l = robot.brain.get "listed:#{obj.username}"
        t = t + "##{i+1}: #{obj.idea}\n" if l
        c = c + 1 if l
    else
      msg.send "No ideas so far!"
      return false
    if c > 0
      msg.send "Say '#{robot.name} idea #N' if you want to join a team"
      msg.send t

  robot.respond /idea #(\d+)/i, (res) ->
    n = res.match[1]
    ideas = robot.brain.get "ideas"
    idea = ideas[n-1]
    res.send "Idea #{n}: talk to @#{idea.username}"
    
